<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="24dp"
    tools:context=".Botones_CRUD">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginTop="32dp"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logomaria" />

    <TextView
        android:id="@+id/tv_crud_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="GestiÃ³n de Usuarios"
        android:textColor="@color/text_light"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_crud_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp">

            <Button
                android:id="@+id/btn_Registrarusuario"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:backgroundTint="@color/success"
                android:elevation="6dp"
                android:fontFamily="sans-serif-medium"
                android:text="Registrar Nuevo Usuario"
                android:textColor="@color/button_text"
                android:textSize="20sp"
                app:cornerRadius="16dp"
                app:icon="@drawable/add_user"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconSize="32dp"
                app:iconTint="@color/button_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_Listarusuario"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/primary_dark"
                android:elevation="6dp"
                android:fontFamily="sans-serif-medium"
                android:text="Ver Lista de Usuarios"
                android:textColor="@color/button_text"
                android:textSize="20sp"
                app:cornerRadius="16dp"
                app:icon="@drawable/list_icon"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconSize="32dp"
                app:iconTint="@color/button_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_Registrarusuario" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>