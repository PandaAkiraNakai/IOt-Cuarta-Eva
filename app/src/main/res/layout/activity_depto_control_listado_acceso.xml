<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".depto_control_listado_acceso">

        <ImageView
            android:id="@+id/imageView232"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:elevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logomaria" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-light"
            android:text="Solicitud de Acceso"
            android:textColor="@color/text_light"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView232" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardBackgroundColor="@color/card_background_white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            app:layout_constraintWidth_percent="0.95">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="24dp">

                <TextView
                    android:id="@+id/resultado_acceso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Usuario:"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/usuario_texto2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Juan PÃ©rez"
                    android:textColor="@color/primary_dark"
                    android:textSize="22sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/resultado_acceso"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/resultado_acceso" />

                <TextView
                    android:id="@+id/fecha_acceso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Fecha:"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/resultado_acceso" />

                <TextView
                    android:id="@+id/fecha_texto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="04/12/2025 21:30"
                    android:textColor="@color/text_secondary"
                    android:textSize="20sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/fecha_acceso"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/fecha_acceso" />

                <TextView
                    android:id="@+id/estado_barrera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Estado:"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fecha_acceso" />

                <TextView
                    android:id="@+id/estado_texto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="sans-serif-black"
                    android:text="PENDIENTE"
                    android:textColor="@color/warning"
                    android:textSize="22sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/estado_barrera"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/estado_barrera" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_permitir_acceso"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/success"
            android:elevation="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Permitir Acceso"
            android:textColor="@color/button_text"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/check_circle"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="@color/button_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_details"
            app:layout_constraintWidth_percent="0.85" />

        <Button
            android:id="@+id/btn_denegar_acceso"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/error_dark"
            android:elevation="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Denegar Acceso"
            android:textColor="@color/button_text"
            android:textSize="20sp"
            app:cornerRadius="16dp"
            app:icon="@drawable/x_circle"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="@color/button_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_permitir_acceso"
            app:layout_constraintWidth_percent="0.85" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>