<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        tools:context=".depto_crud_usuarios_crear">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:elevation="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/logomaria" />

        <EditText
            android:id="@+id/edit_nombre_usuario"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="Nombre completo"
            android:textAlignment="center"
            android:background="@color/surface"
            android:elevation="3dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/img_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>

        <EditText
            android:id="@+id/edit_rut_usuario"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="RUT"
            android:textAlignment="center"
            android:background="@color/surface"
            android:elevation="3dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/edit_nombre_usuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>

        <EditText
            android:id="@+id/edit_email_usuario"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:background="@color/surface"
            android:elevation="3dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/edit_rut_usuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>

        <EditText
            android:id="@+id/edit_telefono_usuario"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="Teléfono"
            android:inputType="phone"
            android:textAlignment="center"
            android:background="@color/surface"
            android:elevation="3dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/edit_email_usuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>

        <EditText
            android:id="@+id/edit_password_usuario"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:background="@color/surface"
            android:elevation="3dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/edit_telefono_usuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>

        <!-- SPINNER ROL -->
        <Spinner
            android:id="@+id/spinner_rol_usuario"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:background="@color/surface"
            android:elevation="3dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/edit_password_usuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>

        <!-- SPINNER DEPARTAMENTO -->
        <Spinner
            android:id="@+id/spinner_depto_usuario"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:background="@color/surface"
            android:elevation="3dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/spinner_rol_usuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"/>

        <Button
            android:id="@+id/btn_guardar_usuario"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="Registrar usuario"
            android:textStyle="bold"
            android:textColor="@color/button_text"
            android:textSize="20sp"
            android:backgroundTint="@color/button_primary"
            android:elevation="6dp"
            app:cornerRadius="16dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/spinner_depto_usuario"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.75"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
