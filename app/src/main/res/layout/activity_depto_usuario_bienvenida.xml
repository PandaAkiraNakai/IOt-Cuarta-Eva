<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="24dp"
    tools:context=".depto_usuario_bienvenida">

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="32dp"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logomaria" />

    <TextView
        android:id="@+id/textView1932"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-light"
        android:text="¡Bienvenido!"
        android:textColor="@color/text_light"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView27" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1932"
        app:layout_constraintWidth_percent="0.95">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp">

            <Button
                android:id="@+id/btn_llavero_usu"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:backgroundTint="@color/primary_dark"
                android:elevation="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Llavero Digital"
                android:textColor="@color/button_text"
                android:textSize="22sp"
                android:textStyle="bold"
                app:cornerRadius="18dp"
                app:icon="@drawable/key_chain_icon"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconSize="32dp"
                app:iconTint="@color/button_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_historial_usu1"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/button_secondary_light"
                android:elevation="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Ver Historial de Accesos"
                android:textColor="@color/button_text_dark"
                android:textSize="22sp"
                android:textStyle="bold"
                app:cornerRadius="18dp"
                app:icon="@drawable/history_icon"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconSize="32dp"
                app:iconTint="@color/button_text_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_llavero_usu" />

            <Button
                android:id="@+id/btn_cerrar_sesion_usu"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/error"
                android:elevation="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Cerrar Sesión"
                android:textColor="@color/button_text"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="18dp"
                app:icon="@drawable/login_icon"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconSize="28dp"
                app:iconTint="@color/button_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_historial_usu1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>