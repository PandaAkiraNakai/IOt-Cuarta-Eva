<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".depto_control_acceso">

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_marginTop="48dp"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logomaria" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-light"
        android:text="Control de Barrera"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView20" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="48dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="ESTADO ACTUAL"
                android:textColor="@color/text_secondary"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/estado_usu_puerta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:text="CERRADO"
                android:textColor="@color/error"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                tools:text="ABIERTO"
                tools:textColor="@color/success" />

            <Button
                android:id="@+id/abrir_puerta_usu"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/success"
                android:elevation="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="ABRIR BARRERA"
                android:textColor="@color/button_text"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:icon="@drawable/unlock"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconTint="@color/button_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/estado_usu_puerta" />

            <Button
                android:id="@+id/cerrar_puerta_usu"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/error_dark"
                android:elevation="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="CERRAR BARRERA"
                android:textColor="@color/button_text"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:icon="@drawable/lock"
                app:iconGravity="textStart"
                app:iconPadding="16dp"
                app:iconTint="@color/button_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/abrir_puerta_usu" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>